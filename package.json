{
  "name": "istex-view",
  "version": "1.0.5",
  "description": "Visualisation interactive des documents ISTEX",
  "private": true,
  "scripts": {
    "watchify": "watchify -vd -p [ browserify-hmr -h 0.0.0.0 ] -e www/src/main.js -o www/dist/build.js",
    "serve": "http-server -c 1 www/",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "cross-env NODE_ENV=production browserify -e www/src/main.js | uglifyjs -c warnings=false -m > www/dist/build.js",
    "lint": "eslint --ext .js,.jsx www/src",
    "version": "./tools/make-version",
    "postversion": "git push && git push --tags"
  },
  "browserify": {
    "transform": [
      "reactify",
      "babelify"
    ]
  },
  "dependencies": {
    "react": "15.3.2",
    "react-dom": "15.3.2"
  },
  "devDependencies": {
    "babel-core": "6.16.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-stage-2": "6.16.0",
    "babel-runtime": "6.11.6",
    "babelify": "7.3.0",
    "browserify": "13.1.0",
    "browserify-hmr": "0.3.5",
    "cross-env": "3.0.0",
    "eslint": "^3.6.1",
    "eslint-plugin-html": "1.5.3",
    "eslint-plugin-react": "6.3.0",
    "http-server": "0.9.0",
    "npm-run-all": "3.1.0",
    "reactify": "1.1.1",
    "uglify-js": "2.7.3",
    "watchify": "3.7.0"
  }
}
